<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h1>User Management</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.first_name %></td>
						<td><%= user.last_name %></td>
						<td><%= user.email_address %></td>
						<td><a href="/user/<%= user.id %>" class="btn btn-default">Show</a> <a href="/user/<%= user.id %>/edit" class="btn btn-success">Edit</a> <a href="/user/<%= user.id %>" class="btn btn-danger" data-method="delete">Destroy</a></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<a class="btn btn-primary" href="/users/new">New User</a>
		</div>
	</div>
</div>
